      "code": "var\nx\n=\n10\nx\n+=\n\n5",
      "language": "javascript",
      "code_html": "<pre class=\"notranslate w3-white language-kotlin\" tabindex=\"0\"><code class=\"language-kotlin\"><span class=\"token keyword keyword-var\">var</span> x <span class=\"token operator\">=</span> 10<br/>x <span class=\"token operator\">+=</span> <span class=\"token number\">5</span></code></pre>",
      "code_classes": [
        "notranslate",
